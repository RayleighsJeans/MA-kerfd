		seti = 4;
	}
	#if (ntrlzconst == 0) {
		seti = 4;
		if (negion == 1) {
			seti = 5;
		}
	#}
  hubbel = 6;
}
if (tempzdiag == 0 && velzdiag == 1) {
	seti = 3;
	if (negion == 1) {
		seti = 4;
	}
	#if (ntrlzconst == 0) {
		seti = 4;
		if (negion == 1) {
			seti = 5;
		}
